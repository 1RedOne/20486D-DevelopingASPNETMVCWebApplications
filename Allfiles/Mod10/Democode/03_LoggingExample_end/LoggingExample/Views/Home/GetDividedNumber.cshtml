@using Microsoft.AspNetCore.Http.Extensions
@inject LoggingExample.Services.ICounter cnt
@model LoggingExample.Models.DivisionResult
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetDividedNumber</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Number @Model.DividedNumber</h1>
    <p>
        The number @Model.DividedNumber is divided by the following numbers: @Model.ToString()
        @if (cnt.UrlCounter.ContainsKey(Context.Request.GetDisplayUrl()))
        {
            <br />@:This number was viewed @cnt.UrlCounter[Context.Request.GetDisplayUrl()]
            @if (cnt.UrlCounter[Context.Request.GetDisplayUrl()] > 1)
            {
                @:times
            }
            else
            {
                @:time
            }
        }
    </p>
    @Html.Partial("_NumberLinks")
</body>
</html>
