@using Microsoft.AspNetCore.Http.Extensions
@inject LoggingExample.Services.ICounter cnt
@model int
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <h1>Multiplication Table</h1>
    <p>
        Welcome to the multiplication table site.<br />
        @if (cnt.UrlCounter.ContainsKey(Context.Request.GetDisplayUrl()))
        {
            @:The number of entrances to the site is: @cnt.UrlCounter[Context.Request.GetDisplayUrl()]<br />
        }
    </p>
    @Html.Partial("_NumberLinks")
</body>
</html>
